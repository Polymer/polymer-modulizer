{
  "name": "polymer-modulizer",
  "description": "Converts Bower + HTML Imports packages to npm + JS modules",
  "version": "0.3.0",
  "author": "The Polymer Project Authors",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/polymer-modulizer.git"
  },
  "license": "BSD-3-Clause",
  "bin": {
    "modulizer": "bin/modulizer.js"
  },
  "scripts": {
    "build": "tsc",
    "build:fixtures": "npm run build && node lib/tools/update-fixtures",
    "test:full": "npm run build && mocha $(find lib/test -name *_test.js) && npm run lint",
    "test:fast": "npm run build && mocha $(find lib/test/unit -name *_test.js)",
    "test:watch": "watchy -w src/ -w custom_typings/ -- npm run test:fast --loglevel=silent",
    "test": "npm run test:fast && npm run lint",
    "lint": "tslint -p ./",
    "format": "find src test | grep '\\.js$\\|\\.ts$' | xargs clang-format --style=file -i",
    "clean": "rm -rf ./lib/",
    "prepublishOnly": "npm test",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/chai": "^3.5.2",
    "@types/esprima": "^2.1.33",
    "@types/inquirer": "^0.0.35",
    "@types/mkdirp": "^0.5.1",
    "@types/mz": "^0.0.31",
    "@types/rimraf": "2.0.2",
    "@types/semver": "^5.3.32",
    "ast-types": "^0.9.11",
    "chai": "^3.5.0",
    "chalk": "^2.3.0",
    "command-line-args": "^4.0.6",
    "command-line-usage": "^4.0.0",
    "esprima": "^3.1.3",
    "inquirer": "^3.2.0",
    "ix": "2.1.0",
    "jscodeshift": "^0.3.30",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "polymer-analyzer": "~2.3.0",
    "polymer-workspaces": "^2.0.0",
    "recast": "^0.12.4",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0",
    "source-map-support": "^0.4.15",
    "spdx-license-list": "^3.0.1",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/diff": "^3.2.0",
    "@types/mocha": "^2.2.41",
    "clang-format": "^1.0.53",
    "diff": "^3.3.0",
    "dir-compare": "^1.4.0",
    "mocha": "^3.5.3",
    "tslint": "^5.5.0",
    "typescript": "~2.5.0",
    "watchy": "^0.7.0"
  }
}
